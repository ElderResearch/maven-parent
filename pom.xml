<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.datamininglab</groupId>
	<artifactId>eri-maven-base</artifactId>
	<version>3.2.3-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<host>swdev.elderresearch.com</host>
		<scm>code.elderresearch.com</scm>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<eri.repo.base>http://nexus:8081/repository</eri.repo.base>
		<eri.releases.repo>${eri.repo.base}/releases</eri.releases.repo>
		<eri.snapshots.repo>${eri.repo.base}/maven-snapshots</eri.snapshots.repo>
		<eri.thirdparty.repo>${eri.repo.base}/thirdparty</eri.thirdparty.repo>
		<site.write>dav:http://${host}/site-upload</site.write>
		<site.read>http://${host}/site</site.read>

		<wagon.webdav.continueOnFailure>true</wagon.webdav.continueOnFailure>
		<!-- Disable dependency reporting stuff that really slows deployment down. -->
		<dependency.details.enabled>false</dependency.details.enabled>
		<dependency.locations.enabled>false</dependency.locations.enabled>

		<!-- Don't include Swagger files by default, only create service.json for most artifacts which aren't web services -->
		<swagger.opts>-skipUiFiles</swagger.opts>
		<swagger.dir>docs</swagger.dir>

		<!-- These are referenced multiple places so are located here to avoid redundancy and allow for convenient change since currently there isn't an "official" 
			version of SWT in central -->
		<swt.groupId>org.eclipse.swt</swt.groupId>
		<swt.artifactId.win32>org.eclipse.swt.win32.win32.x86</swt.artifactId.win32>
		<swt.artifactId.win64>org.eclipse.swt.win32.win32.x86_64</swt.artifactId.win64>
		<swt.artifactId.mac32>org.eclipse.swt.cocoa.macosx</swt.artifactId.mac32>
		<swt.artifactId.mac64>org.eclipse.swt.cocoa.macosx.x86_64</swt.artifactId.mac64>
		<swt.artifactId.linux>org.eclipse.swt.gtk.linux.x86</swt.artifactId.linux>
	</properties>

	<name>ERI Cross-Project Parent POM</name>

	<modules>
		<module>eri-application-base</module>
		<module>eri-code-metrics</module>
		<module>eri-commons-checkstyle</module>
	</modules>

	<scm>
		<developerConnection>scm:git:ssh://${scm}:29418/eri-commons/eri-maven-base.git</developerConnection>
		<connection>scm:git:ssh://${scm}:29418/eri-commons/eri-maven-base.git</connection>
		<url>http://${scm}/summary/eri-commons%2Feri-maven-base.git</url>
		<tag>HEAD</tag>
	</scm>

	<distributionManagement>
		<downloadUrl>${eri.snapshots.repo}</downloadUrl>
		<repository>
			<id>eri-releases-repo</id>
			<name>ERI Release Artifact Repository</name>
			<url>${eri.releases.repo}</url>
		</repository>
		<snapshotRepository>
			<id>eri-snapshots-repo</id>
			<name>ERI Snapshot Artifact Repository</name>
			<url>${eri.snapshots.repo}</url>
		</snapshotRepository>
		<site>
			<id>eri-mvn-site</id>
			<name>ERI Maven Site</name>
			<url>${site.write}</url>
		</site>
	</distributionManagement>

	<repositories>
		<repository>
			<id>eri-snapshots</id>
			<url>${eri.snapshots.repo}</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
		<repository>
			<id>eri-third-party</id>
			<url>${eri.thirdparty.repo}</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
			</releases>
		</repository>
		<repository>
			<id>eri-releases-repo</id>
			<name>ERI Release Artifact Repository</name>
			<url>${eri.releases.repo}</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<!-- External repos -->
		<repository>
			<id>google-swt-repo</id>
			<name>Google Code SWT Repo</name>
			<url>${eri.repo.base}/swt-repo/</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>eri-releases-repo</id>
			<name>ERI Release Artifact Repository</name>
			<url>${eri.releases.repo}</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>interval:30</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<issueManagement>
		<system>Redmine</system>
		<url>http://${host}/redmine</url>
	</issueManagement>
	<ciManagement>
		<system>Jenkins</system>
		<url>http://${host}/jenkins</url>
	</ciManagement>
	<organization>
		<name>Elder Research, Inc.</name>
		<url>http://datamininglab.com</url>
	</organization>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.16.12</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<additionalparam>${javadoc.opts}</additionalparam>
						</configuration>
					</execution>
					<execution>
						<id>generate-service-docs</id>
						<goals>
							<goal>javadoc</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<destDir>${swagger.dir}</destDir>
							<doclet>com.tenxerconsulting.swagger.doclet.ServiceDoclet</doclet>
							<docletArtifact>
								<groupId>com.tenxerconsulting</groupId>
								<artifactId>swagger-doclet</artifactId>
								<version>1.0.7</version>
							</docletArtifact>
							<reportOutputDirectory>${project.build.outputDirectory}</reportOutputDirectory>
							<useStandardDocletOptions>false</useStandardDocletOptions>
							<additionalparam>${swagger.opts}</additionalparam>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<optimize>true</optimize>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.2</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.2</version>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<pushChanges>false</pushChanges>
					<localCheckout>true</localCheckout>
					<goals>deploy</goals>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.4</version>
				<executions>
					<execution>
						<id>attach-descriptor</id>
						<goals>
							<goal>attach-descriptor</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<generateReports>false</generateReports>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>lt.velykis.maven.skins</groupId>
						<artifactId>reflow-velocity-tools</artifactId>
						<version>1.1.1</version>
					</dependency>
					<dependency>
						<groupId>org.apache.velocity</groupId>
						<artifactId>velocity</artifactId>
						<version>1.7</version>
					</dependency>
					<dependency>
						<groupId>org.apache.maven.doxia</groupId>
						<artifactId>doxia-module-markdown</artifactId>
						<version>1.6</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<!-- Some projects contain platform-specific dependencies. They should build separate artifacts for each platform via the module mechanism. However, for 
		development, it is useful to be able to automatically select the correct one based on the developer's operating system. Use these profiles to define the 
		correct value for platform-specific code. It is recommended all properties start with "system" -->
	<profiles>
		<profile>
			<id>mac32</id>
			<activation>
				<os>
					<family>mac</family>
					<arch>x86</arch>
				</os>
			</activation>
			<properties>
				<system.platform>mac32</system.platform>
				<system.swt.artifactId>${swt.artifactId.mac32}</system.swt.artifactId>
			</properties>
		</profile>

		<profile>
			<id>mac64</id>
			<activation>
				<os>
					<family>mac</family>
					<arch>x86_64</arch>
				</os>
			</activation>
			<properties>
				<system.platform>mac64</system.platform>
				<system.swt.artifactId>${swt.artifactId.mac64}</system.swt.artifactId>
			</properties>
		</profile>

		<profile>
			<id>win32</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>x86</arch>
				</os>
			</activation>
			<properties>
				<system.platform>win32</system.platform>
				<system.swt.artifactId>${swt.artifactId.win32}</system.swt.artifactId>
			</properties>
		</profile>
		<profile>
			<id>win64</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<system.platform>win64</system.platform>
				<system.swt.artifactId>${swt.artifactId.win64}</system.swt.artifactId>
			</properties>
		</profile>

		<profile>
			<id>linux</id>
			<activation>
				<os>
					<family>linux</family>
				</os>
			</activation>
			<properties>
				<system.platform>linux</system.platform>
				<system.swt.artifactId>${swt.artifactId.linux}</system.swt.artifactId>
			</properties>
		</profile>

		<!-- Javadocs now return exit code 1 in JDK8+ which prevents any Maven build from completing unless the Javadocs are perfect -->
		<profile>
			<id>javadoc-doclint-disable</id>
			<activation>
				<jdk>[1.8,)</jdk>
			</activation>
			<properties>
				<javadoc.opts>-Xdoclint:none</javadoc.opts>
			</properties>
		</profile>
	</profiles>
</project>
